              VERSION             => $version,
              show_comments       => 0,
              quiet               => 0,
              debug               => 0,
              nocolors            => 0,
              movepkg             => 0,
              noedit              => 0,
              nobuild             => 0,
              nopull              => 0,
              noinfo              => 0,
              skipinteg           => 0,
              force               => 0,
              lwp_show_progress   => 0,
              lwp_env_proxy       => 1,
              lwp_timeout         => 60,
              ssl_verify_hostname => 0,
              packages_in_stats   => 5,
              git_clone_depth     => 0,
              split_packages      => 1,
              recompute_deps      => 1,
