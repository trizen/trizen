              su_command          => '/usr/bin/su -c',
              sudo_command        => '/usr/bin/sudo',
              makepkg_command     => '/usr/bin/makepkg --syncdeps --force --clean',
              movepkg_dir         => '/var/cache/pacman/pkg',
              pacman_local_dir    => '/var/lib/pacman/local',
              pacman_command      => '/usr/bin/pacman',
             );

